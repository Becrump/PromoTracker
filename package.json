{
  "name": "promo-planning-tracker",
  "version": "1.0.0",
  "description": "Desktop Promo Planning & Tracking Suite",
  "main": "main.js",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/Becrump/PromoTracker.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "vite build",
    "build:win": "electron-builder --win"
  },
  "author": "PromoPlanner Team",
  "devDependencies": {
    "vite": "^6.0.0",
    "typescript": "^5.0.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.promoplanner.tracker",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "**/*",
      "!dist/*"
    ]
  }
}
